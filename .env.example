# Application
APP_NAME="Casa de Empeño"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://tudominio.com

APP_LOCALE=es
APP_FALLBACK_LOCALE=es
APP_FAKER_LOCALE=es_ES

APP_MAINTENANCE_DRIVER=file
APP_MAINTENANCE_STORE=database

PHP_CLI_SERVER_WORKERS=4

# Security
BCRYPT_ROUNDS=12

# Logging
LOG_CHANNEL=stack
LOG_STACK=single,daily
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# Database
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=pawnshop_db
DB_USERNAME=pawnshop_user
DB_PASSWORD=

# Session & Security
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_PATH=/
SESSION_DOMAIN=null
SESSION_SECURE_COOKIE=true
SESSION_SAME_SITE=lax

# Cache
CACHE_STORE=database
CACHE_PREFIX=pawnshop_cache

# Queue
BROADCAST_CONNECTION=log
QUEUE_CONNECTION=database

# File Storage
FILESYSTEM_DISK=local

# Redis (opcional)
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Mail Configuration
MAIL_MAILER=smtp
MAIL_SCHEME=tls
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_FROM_ADDRESS="noreply@tudominio.com"
MAIL_FROM_NAME="${APP_NAME}"

# Security Headers
SECURITY_HSTS_ENABLED=true
SECURITY_CSP_ENABLED=true
SECURITY_XSS_PROTECTION=true
SECURITY_FRAME_OPTIONS=DENY

# Rate Limiting
RATE_LIMIT_LOGIN=5
RATE_LIMIT_API=60

# Trusted Proxies (configure según tu servidor)
TRUSTED_PROXIES=
TRUSTED_HOSTS=

# AWS (si usas S3 para almacenamiento)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Force HTTPS
FORCE_HTTPS=true

VITE_APP_NAME="${APP_NAME}"
